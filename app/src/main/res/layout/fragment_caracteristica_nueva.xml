<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barraSuperior"
        android:orientation="horizontal"
        android:background="@color/verde_principal"
        android:elevation="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/negro"
            android:layout_weight="1"
            android:text="Nuevas Caracteristicas"
            android:gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/boton_salir_caracteristica"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_clear_24"
            android:text="salir"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editTextNombreCaracteristica"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="95dp"
            android:hint="Nombre de Nueva Caracteristica"
            android:backgroundTint="@color/verde_luz"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editTextNombreCaracteristica2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="5dp"
            android:hint="Nombre de Nueva Caracteristica"
            android:backgroundTint="@color/verde_luz"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editTextNombreCaracteristica3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="5dp"
            android:hint="Nombre de Nueva Caracteristica"
            android:backgroundTint="@color/verde_luz"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editTextNombreCaracteristica4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="5dp"
            android:hint="Nombre de Nueva Caracteristica"
            android:backgroundTint="@color/verde_luz"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editTextNombreCaracteristica5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="5dp"
            android:hint="Nombre de Nueva Caracteristica"
            android:backgroundTint="@color/verde_luz"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/boton_agregar_caracteristica"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:textColor="@color/negro"
            android:layout_marginTop="30dp"
            android:text="Agregar Caracteristicas"
            android:backgroundTint="@color/verde_luz"
            android:textSize="20dp"/>

    </LinearLayout>

</FrameLayout>
