<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/listViewLayoutVentas">

    <TextView
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="VENTA"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textColor="@color/verde_sombra"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="ganancia"

            android:id="@+id/textViewGanancia"
            android:textSize="15dp"
            android:gravity="left"

            android:textColor="@color/verde_principal">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="producto"
            android:id="@+id/textViewProductoC"
            android:textSize="15dp"
            android:gravity="left"

            android:textColor="@color/negro">
        </TextView>

    </LinearLayout>
</LinearLayout>